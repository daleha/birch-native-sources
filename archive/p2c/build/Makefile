# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=debug
endif
export config

PROJECTS := p2c bachrest

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

p2c: 
	@echo "==== Building p2c ($(config)) ===="
	@${MAKE} --no-print-directory -C ../../../fsap/build -f Makefile

bachrest: p2c
	@echo "==== Building bachrest ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f bachrest.make

clean:
	@${MAKE} --no-print-directory -C ../../../fsap/build -f Makefile clean
	@${MAKE} --no-print-directory -C . -f bachrest.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug"
	@echo "   release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   p2c"
	@echo "   bachrest"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
