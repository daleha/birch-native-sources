# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=debug
endif
export config

PROJECTS := phylip_core phylip_gui

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

phylip_core: 
	@echo "==== Building phylip_core ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f phylip_core.make

phylip_gui: 
	@echo "==== Building phylip_gui ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f phylip_gui.make

clean:
	@${MAKE} --no-print-directory -C . -f phylip_core.make clean
	@${MAKE} --no-print-directory -C . -f phylip_gui.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug"
	@echo "   release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   phylip_core"
	@echo "   phylip_gui"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
