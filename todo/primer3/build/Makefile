ifndef config
  config=debug
endif
export config

PROJECTS := oligotmlib dpal thal primer3

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

oligotmlib: 
	@echo "==== Building oligotmlib ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f oligotmlib.make

dpal: 
	@echo "==== Building dpal ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f dpal.make

thal: 
	@echo "==== Building thal ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f thal.make

primer3: 
	@echo "==== Building primer3 ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f primer3.make

clean:
	@${MAKE} --no-print-directory -C . -f oligotmlib.make clean
	@${MAKE} --no-print-directory -C . -f dpal.make clean
	@${MAKE} --no-print-directory -C . -f thal.make clean
	@${MAKE} --no-print-directory -C . -f primer3.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug"
	@echo "   release"
	@echo ""
