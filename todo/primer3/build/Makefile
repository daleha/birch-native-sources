	@echo "   all (default)"
	@echo "   clean"
	@echo "   oligotmlib"
	@echo "   dpal"
	@echo "   thal"
	@echo "   primer3"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
