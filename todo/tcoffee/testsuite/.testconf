#
# Environmnt definition
# 
export DIR_4_TCOFFEE=${tcoffee.home}
export MCOFFEE_4_TCOFFEE=${tcoffee.home}/mcoffee/
export MAFFT_BINARIES=${tcoffee.home}/bin/
export PERL5LIB=${tcoffee.home}/perl/
export DYLD_LIBRARY_PATH=$DYLD_LIBRARY_PATH:${tcoffee.home}/gfortran
export LOCKDIR_4_TCOFFEE=${run.path}/.lck
export CACHE_4_TCOFFEE=${run.path}/.cache
export TMP_4_TCOFFEE=${run.path}/.tmp
export EMAIL_4_TCOFFEE=tcoffee.msa@gmail.com

# Note: /usr/local/bin is required to run 'valgrind' on macosx because otherwise it is not added by default
export PATH=${tcoffee.home}/bin:/usr/local/bin:$PATH

before: mkdir -p ${run.path}/.lck

assert: directory "${run.path}/.lck" isEmpty
assert: file t_coffee.ErrorReport not exists


